{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Daemon serve",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "serve",
                "--cwd",
                "${workspaceFolder}/scroll-cwd",
                "-p",
                "9190",
            ],
        },
        {
            "name": "Debug Daemon run switch scroll",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/main.go",
            "args": [
                "run",
                "scroll-switch.registry-1.docker.io/highcard/scroll-minecraft-forge:1.20.2",
                "--cwd",
                "${workspaceFolder}/scroll-cwd",
            ],
        }
    ]
}