{
  "name": "daemon",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cwd": "apps/deployment/daemon",
      "options": {
        "cwd": "apps/deployment/daemon",
        "commands": [
          {
            "command": "go build -o ./bin/daemon"
          }
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "master",
        "preset": "conventional",
        "postTargets": ["daemon:github"],
        "push": true
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}",
        "files": ["apps/deployment/daemon/bin/daemon"]
      }
    }
  },
  "tags": ["type:app", "scope:auth", "lang:node"],
  "implicitDependencies": ["shared-proto"]
}
