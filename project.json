{
  "name": "daemon",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cwd": "apps/deployment/daemon",
      "options": {
        "cwd": "apps/deployment/daemon",
        "commands": [
          {
            "command": "make build"
          },
          {
            "command": "make build-plugins"
          }
        ]
      }
    },
    "version": {
      "executor": "@jscutlery/semver:version",
      "options": {
        "baseBranch": "master",
        "preset": "conventional",
        "postTargets": ["daemon:github"],
        "push": true
      }
    },
    "github": {
      "executor": "@jscutlery/semver:github",
      "options": {
        "tag": "${tag}",
        "notes": "${notes}",
        "files": [
          "apps/deployment/daemon/bin/druid",
          "apps/deployment/daemon/bin/druid_rcon",
          "apps/deployment/daemon/bin/druid_rcon_web_rust"
        ]
      }
    }
  },
  "tags": ["type:app", "scope:auth", "lang:node"],
  "implicitDependencies": ["shared-proto"]
}
