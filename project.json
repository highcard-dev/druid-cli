{
  "name": "daemon",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "cwd": "apps/deployment/daemon",
      "options": {
        "cwd": "apps/deployment/daemon",
        "commands": [
          {
            "command": "make build"
          },
          {
            "command": "make build-plugins"
          }
        ]
      }
    },
    "codegen": {
      "executor": "nx:run-commands",
      "options": {
        "cwd": "apps/deployment/daemon",
        "commands": [
          {
            "command": "swag init -g ./cmd/server/web/server.go --overridesFile override.swag"
          }
        ]
      }
    }
  },
  "tags": ["type:app", "scope:daemon", "lang:golang"],
  "implicitDependencies": ["shared-proto"]
}
